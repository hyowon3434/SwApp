<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 상단 툴바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 뒤로 가기 버튼 -->
        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_previous"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="뒤로 가기"/>

        <!-- 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="폰 동작 상태"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- 상태 정보 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/text_android_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안드로이드 버전: Android 10 Q"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/text_wifi_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIFI: ON"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/text_lte_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LTE: OFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/text_sdcard_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDCARD 용량 (전체용량/남은용량): 64GB / 20GB"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/text_installed_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설치한 app 수 / 동작중인 app 수: 100 / 2"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</LinearLayout>